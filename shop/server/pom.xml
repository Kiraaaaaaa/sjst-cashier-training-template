<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.meituan.catering</groupId>
        <artifactId>com-meituan-catering-management-shop</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>
    <artifactId>com-meituan-catering-management-shop-server</artifactId>
    <name>com-meituan-catering-management-shop-server</name>
    <version>0.0.1-SNAPSHOT</version>
    <description>美团餐饮-门店管理-服务端</description>
    <packaging>jar</packaging>

    <dependencies>

        <dependency>
            <groupId>com.meituan.catering</groupId>
            <artifactId>com-meituan-catering-management-shop-client</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>com.meituan.catering</groupId>
            <artifactId>com-meituan-catering-management-common</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
        <!-- 先声明jmockit的依赖 -->
        <dependency>
            <groupId>org.jmockit</groupId>
            <artifactId>jmockit</artifactId>
            <version>1.36</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                        </exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
